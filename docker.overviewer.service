[Unit]
Description=Docker Overviewer service
After=docker.service
Requires=docker.service

[Service]
User=ec2-user
StandardInput=tty-force
TimeoutStartSec=0
Restart=always
RestartSec=10
ExecStart=/usr/bin/docker run \
  --rm \
  --name %n \
  -p 80:80/tcp \
  --mount type=bind,source=/server/overviewer,target=/usr/local/apache2/htdocs \
  -it \
  httpd:latest
ExecStop=/usr/bin/docker stop %n

[Install]
WantedBy=default.target
